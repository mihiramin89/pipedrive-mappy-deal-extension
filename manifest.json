{
	"manifest_version": 2,

	"name": "Pipedrive Gmail Integration",
  	"description": "This extension uses your pipedrive key and ",
  	"version": "1.0",


  	"background": {
  		"scripts": [ "scripts/background.js"],
  		"persistent": false
  	},

  	"content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["scripts/jquery-3.1.1.min.js","scripts/scripts.js"],
      "css": ["css/mycss.css"]
    }],

    "permissions": [ 
    "https://api.pipedrive.com/*",
    "storage" ],

  "web_accessible_resources":["img/*.svg"]
}